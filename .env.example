# App Configuration
DEBUG=false
PROJECT_NAME=AutoProjectPost
VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000

# CORS - Add your Vercel frontend URL here
ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://linkedinauto.vercel.app

# Database - Railway provides this automatically as DATABASE_URL
DATABASE_URL=postgresql://...

# GitHub OAuth - Get from https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-backend.railway.app/api/v1/auth/github/callback

# LinkedIn OAuth - Get from https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://your-backend.railway.app/api/v1/auth/linkedin/callback

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=autoprojectpost-uploads

# Security - Generate random keys
SECRET_KEY=your-random-secret-key-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Webhooks
WEBHOOK_SECRET=your-webhook-secret